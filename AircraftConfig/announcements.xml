      </binding>
    </checkbox>

  <hrule/>

    <checkbox>
      <halign>left</halign>
      <label>Boarding Music</label>
      <property>sim/sound/music2</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/music2</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Passenger noise</label>
      <property>sim/sound/passengers</property>
      <binding>
          <command>property-toggle</command>
          <property>sim/sound/passengers</property>
      </binding>
    </checkbox>
    
    <hrule/>
    
    <checkbox>
        <halign>left</halign>
        <label>Auto-annunciator</label>
        <property>aircraft-config/auto-annunciator</property>
        <binding>
            <command>property-toggle</command>
            <property>aircraft-config/auto-annunciator</property>
        </binding>
    </checkbox>


  </group>

</PropertyList>

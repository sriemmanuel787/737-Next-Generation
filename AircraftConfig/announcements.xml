<?xml version="1.0" encoding="UTF-8"?>

<!-- B738 Aircraft Config Dialog -->

<PropertyList>

	<name>aircraft-config-announcements</name>
  <layout>vbox</layout>

<!-- Reminder, included are: Seatbelt, Departure, CrewDeparture, take-off, cruising, descending, brace -->

    <group>
        <layout>hbox</layout>
        <text>
            <halign>left</halign>
            <label>Cabin Announcements</label>
        </text>
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <checkbox>
      <halign>left</halign>
      <label>Seatbelts Sign</label>
      <property>sim/sound/seatbelt-sign</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/seatbelt-sign</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>No Smoking Sign</label>
      <property>sim/sound/no-smoking-sign</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/no-smoking-sign</property>
      </binding>
    </checkbox>

 <hrule/>

    <checkbox>
      <halign>left</halign>
      <label>Welcome Aboard</label>
      <property>sim/sound/welcome</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/welcome</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Safety Briefing</label>
      <property>sim/sound/safety</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/safety</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Pre-Take Off</label>
      <property>sim/sound/pretakeoff</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/pretakeoff</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Climbing</label>
      <property>sim/sound/climb</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/climb</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Cruise SeatBelt</label>
      <property>sim/sound/cruise-seatbelt</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/cruise-seatbelt</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Cruising</label>
      <property>sim/sound/cruise</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/cruise</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Descending</label>
      <property>sim/sound/descent</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/descent</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Landing</label>
      <property>sim/sound/land</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/land</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Parked at Gate</label>
      <property>sim/sound/gate</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/gate</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Emergency</label>
      <property>sim/sound/emergency</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/emergency</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Brace</label>
      <property>sim/sound/brace</property>
